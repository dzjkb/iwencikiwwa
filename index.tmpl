    <style>
        @import url('https://fonts.googleapis.com/css2?family=Fredoka+One:wght@400&display=swap');
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            /* background-color: #2c2c2c; */
            /* background-color: #1f1f1f; */
            background-color: #000000;
            font-family: 'Lato', sans-serif;
            color: #d1c27d;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;

            display: flex;
            flex-direction: column;
        }

        footer {
            margin-top: auto;
            text-align: center;
            padding: 1rem;
            font-size: clamp(0.75rem, 1.5vw, 0.875rem);
        }

        .saxguy {
            width: 200px;
            height: 200px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .hejka {
            font-family: 'Roboto';
            /* font-size: clamp(3rem, 10vw, 4.5rem); */
            font-size: clamp(1.5rem, 1vw, 2rem);
            text-align: center;
            /* list-style-position: inside; */
            margin-bottom: 3rem;
            margin-top: 3rem;

            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        ul {
            list-style-type: none;
            width: fit-content;
            margin: 0 auto;
        }

        .iwenciki-cn {
            margin-top: 12vh;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .start-tekscik {
            margin-top: 7vh;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        li {
            font-size: clamp(1rem, 2.5vw, 1.6rem);
            text-align: center;
        }
        
        .dark-links a {
            color: #58a6ff; /* Light blue for unvisited links */
        }

        .dark-links a:visited {
            color: #bc8cff; /* Light purple for visited links */
        }

        .dark-links a:hover {
            color: #79c0ff; /* Lighter blue on hover */
            text-decoration: underline;
        }

        .date {
            color: #c92ef0;
            font-weight: 600;
        }

        .gdzie {
            color: #5340c0;
            font-weight: 300;
        }

        .tix {
            color: #4f84ca;
            font-weight: 300;
        }

        .fejsbuk {
            color: #346648;
            text-shadow: 0 0 10px rgba(34, 211, 238, 0.3);
        }
        .fejsbuk a:visited {
            color: #bc8cff; /* Light purple for visited links */
        }
        .fixed-transparent-image {
            position: fixed;
            top: 30%;
            left: 30%;
            opacity: 0.3;
            z-index: -1000;
            pointer-events: none; /* Optional: allows clicking through the image */
        }

        .img-1 {
            width: clamp(20rem, 30vw, 50rem);
            height: clamp(20rem, 30vw, 50rem);
            transform: translate(110%, 30%);
        }
        .img-2 {
            left: 0%;
            width: clamp(20rem, 30vw, 50rem);
            height: clamp(20rem, 30vw, 50rem);
            transform: translate(0%, 30%);
        }
        .rainbow-text {
            background: linear-gradient(
                to right,
                #ff0000,
                #ff7f00,
                #ffff00,
                #00ff00,
                #0000ff,
                #4b0082,
                #9400d3
            );
            background-size: 200% auto;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: rainbow 3s linear infinite;
        }

        @keyframes rainbow {
            0% {
                background-position: 0% center;
            }
            100% {
                background-position: 200% center;
            }
        }
    </style>
